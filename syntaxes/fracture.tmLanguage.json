{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Fracture",
  "scopeName": "source.fracture",
  "patterns": [
    {
      "include": "#shebang"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#functionSignature"
    },
    {
      "include": "#functionDeclaration"
    },
    {
      "include": "#arrayFirstCall"
    },
    {
      "include": "#chainCall"
    },
    {
      "include": "#scopedFunction"
    },
    {
      "include": "#methodCall"
    },
    {
      "include": "#propertyAccess"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#builtins"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#punctuation"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "shebang": {
      "name": "comment.line.shebang.fracture",
      "match": "\\A#!.*$"
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.fracture",
          "match": "//.*$"
        },
        {
          "name": "comment.block.fracture",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "include": "#doubleQuotedString"
        },
        {
          "include": "#singleQuotedString"
        }
      ]
    },
    "doubleQuotedString": {
      "name": "string.quoted.double.fracture",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.fracture",
          "match": "\\\\(?:[ntr\\\\\"'])"
        }
      ]
    },
    "singleQuotedString": {
      "name": "string.quoted.single.fracture",
      "begin": "'",
      "end": "'",
      "patterns": [
        {
          "name": "constant.character.escape.fracture",
          "match": "\\\\(?:[ntr\\\\\"'])"
        }
      ]
    },
    "functionSignature": {
      "name": "meta.function.signature.fracture",
      "match": "\\b(f::)([A-Za-z_][A-Za-z0-9_]*)(\\s*(\\[[^\\]]*\\]))?(\\s*(->)\\s*([A-Za-z_][A-Za-z0-9_]*))?(?=\\s*\\{)",
      "captures": {
        "1": {
          "name": "storage.type.function.fracture"
        },
        "2": {
          "name": "entity.name.function.fracture"
        },
        "4": {
          "name": "meta.function.arguments.fracture"
        },
        "6": {
          "name": "keyword.operator.return-type.fracture"
        },
        "7": {
          "name": "storage.type.fracture"
        }
      }
    },
    "functionDeclaration": {
      "name": "meta.function.declaration.fracture",
      "match": "\\b(f::)([A-Za-z_][A-Za-z0-9_]*)\\b",
      "captures": {
        "1": {
          "name": "storage.type.function.fracture"
        },
        "2": {
          "name": "entity.name.function.fracture"
        }
      }
    },
    "arrayFirstCall": {
      "name": "meta.call.array-first.fracture",
      "match": "(\\])\\s*([A-Za-z_][A-Za-z0-9_]*(?:::[A-Za-z_][A-Za-z0-9_]*|:[A-Za-z_][A-Za-z0-9_]*)?)(?=\\s*(?:>>|;|\\)|\\]|\\}|$))",
      "captures": {
        "1": {
          "name": "punctuation.section.arguments.end.fracture"
        },
        "2": {
          "name": "support.function.call.fracture"
        }
      }
    },
    "chainCall": {
      "name": "meta.call.chain.fracture",
      "match": "(>>)\\s*([A-Za-z_][A-Za-z0-9_]*(?:::[A-Za-z_][A-Za-z0-9_]*|:[A-Za-z_][A-Za-z0-9_]*)?)(?=\\s*(?:>>|;|\\)|\\]|\\}|$))",
      "captures": {
        "1": {
          "name": "keyword.operator.pipeline.fracture"
        },
        "2": {
          "name": "support.function.call.fracture"
        }
      }
    },
    "scopedFunction": {
      "name": "meta.function.scoped.fracture",
      "match": "\\b([A-Za-z_][A-Za-z0-9_]*)(::)([A-Za-z_][A-Za-z0-9_]*)\\b",
      "captures": {
        "1": {
          "name": "entity.name.namespace.fracture"
        },
        "2": {
          "name": "punctuation.separator.namespace.fracture"
        },
        "3": {
          "name": "entity.name.function.fracture"
        }
      }
    },
    "methodCall": {
      "name": "meta.method.fracture",
      "match": "\\b([A-Za-z_][A-Za-z0-9_]*)(:)([A-Za-z_][A-Za-z0-9_]*)\\b",
      "captures": {
        "1": {
          "name": "variable.other.object.fracture"
        },
        "2": {
          "name": "punctuation.separator.method.fracture"
        },
        "3": {
          "name": "entity.name.function.method.fracture"
        }
      }
    },
    "propertyAccess": {
      "name": "meta.property-access.fracture",
      "match": "\\b([A-Za-z_][A-Za-z0-9_]*)(\\.)([A-Za-z_][A-Za-z0-9_]*)\\b",
      "captures": {
        "1": {
          "name": "variable.other.object.fracture"
        },
        "2": {
          "name": "punctuation.accessor.dot.fracture"
        },
        "3": {
          "name": "variable.other.property.fracture"
        }
      }
    },
    "keywords": {
      "name": "keyword.control.fracture",
      "match": "\\b(?:if|else|while|for|foreach|forever|do|ret|import|let|in|const|break|continue)\\b"
    },
    "types": {
      "name": "storage.type.fracture",
      "match": "\\b(?:int|float|double|string|bool|void|array|object)\\b"
    },
    "constants": {
      "name": "constant.language.fracture",
      "match": "\\b(?:true|false|yes|no|null)\\b"
    },
    "builtins": {
      "name": "support.function.builtin.fracture",
      "match": "\\b(?:print|write)\\b"
    },
    "numbers": {
      "name": "constant.numeric.fracture",
      "match": "(?<![\\w.])[+-]?(?:(?:0[xX][0-9A-Fa-f](?:_?[0-9A-Fa-f])*)|(?:0[bB][01](?:_?[01])*)|(?:0[oO][0-7](?:_?[0-7])*)|(?:\\d(?:_?\\d)*(?:\\.\\d(?:_?\\d)*)?(?:[eE][+-]?\\d(?:_?\\d)*)?|\\.\\d(?:_?\\d)*(?:[eE][+-]?\\d(?:_?\\d)*)?))\\b"
    },
    "operators": {
      "name": "keyword.operator.fracture",
      "match": "(?:>>|\\.\\.|==|!=|<=|>=|&&|\\|\\||->|--|[+\\-*/%<>=!&|])"
    },
    "punctuation": {
      "name": "punctuation.separator.fracture",
      "match": "[{}()\\[\\],;:]"
    },
    "identifiers": {
      "name": "variable.other.readwrite.fracture",
      "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
    }
  }
}
